<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="detailsViewModel"
            type="com.pratclot.tunetracker.details.DetailsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tune_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_tune_name"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tune_link_to_pdf"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/sample_tune_link_to_pdf" />

        <WebView
            android:id="@+id/tune_tab_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</layout>